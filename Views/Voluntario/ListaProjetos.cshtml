@model List<Projeto>

@{
    ViewData["Title"] = "Projetos Disponíveis";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="mb-4">
            Projetos Disponíveis
        </h2>

        <form method="get" asp-action="ListaProjetos" class="card shadow p-3 mb-4">
            <div class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="cidade" class="form-control" placeholder="Filtrar por cidade..." value="@ViewBag.Cidade" />
                </div>
                <div class="col-md-4">
                    <input type="text" name="causa" class="form-control" placeholder="Filtrar por causa..." value="@ViewBag.Causa" />
                </div>
                <div class="col-md-4">
                    <input type="text" name="palavra" class="form-control" placeholder="Buscar por palavra-chave..." value="@ViewBag.Palavra" />
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        Buscar
                    </button>
                    <a href="@Url.Action("ListaProjetos")" class="btn btn-secondary">
                        Limpar Filtros
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model != null && Model.Count > 0)
{
    <div class="row g-3">
        @foreach (var projeto in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card shadow h-100">
                    <div class="card-body">
                        <h5 class="card-title">@projeto.Titulo</h5>
                        <p class="card-text text-muted">@projeto.Descricao.Substring(0, Math.Min(80, projeto.Descricao.Length))...</p>
                        
                        <div class="mb-3">
                            <span class="badge bg-primary">@projeto.Categoria</span>
                            <span class="badge bg-secondary">@projeto.Endereco</span>
                        </div>

                        <div class="mb-3">
                            <small class="text-muted">
                                @projeto.ONG?.NomeONG
                            </small>
                        </div>

                        <div class="mb-3">
                            <small class="text-muted">
                                @projeto.Data.ToString("dd/MM/yyyy")
                            </small>
                        </div>

                        <div class="mb-3">
                            <small class="text-muted">
                                @projeto.TotalVagas vagas disponíveis
                            </small>
                        </div>

                        <a href="@Url.Action("DetalhesProjeto", new { id = projeto.Id })" class="btn btn-primary btn-sm w-100">
                            Ver Detalhes
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center py-5" role="alert">
        <br />
        <strong>Nenhum projeto encontrado</strong><br />
        Tente ajustar seus filtros de busca.
    </div>
}
