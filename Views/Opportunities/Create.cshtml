@model Opportunity

@{
    ViewData["Title"] = "Criar Oportunidade";
}

<div class="form-container">
    <div class="form-section">
        <h1 class="mb-4">
            <i class="fas fa-plus-circle me-2" style="color: #2563eb;"></i>Criar Oportunidade de Voluntariado
        </h1>

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                <span>Ocorreu um erro ao criar a oportunidade. Verifique os campos abaixo.</span>
            </div>

            <!-- Título -->
            <div class="form-group">
                <label asp-for="Title" class="form-label">
                    <i class="fas fa-heading me-2"></i>Título da Oportunidade
                </label>
                <input asp-for="Title" class="form-control" placeholder="Ex: Aula de Reforço Escolar" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Descrição -->
            <div class="form-group">
                <label asp-for="Description" class="form-label">
                    <i class="fas fa-align-left me-2"></i>Descrição
                </label>
                <textarea asp-for="Description" class="form-control" rows="5" placeholder="Descreva a oportunidade de voluntariado..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Data -->
            <div class="form-group">
                <label asp-for="Date" class="form-label">
                    <i class="fas fa-calendar me-2"></i>Data e Hora
                </label>
                <input asp-for="Date" type="datetime-local" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <!-- Organização -->
            <div class="form-group">
                <label asp-for="OrganizationId" class="form-label">
                    <i class="fas fa-building me-2"></i>Organização
                </label>
                <select asp-for="OrganizationId" class="form-select" asp-items="ViewBag.OrganizationId">
                    <option value="">-- Selecione uma organização --</option>
                </select>
                <span asp-validation-for="OrganizationId" class="text-danger"></span>
            </div>

            <!-- Botões de Ação -->
            <div class="form-actions">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i>Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Criar Oportunidade
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
