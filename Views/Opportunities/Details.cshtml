@model Opportunity

@{
    ViewData["Title"] = "Detalhes da Oportunidade";
}

<!-- Header -->
<div class="details-header">
    <h1>@Model.Title</h1>
    <div class="details-meta">
        <span>
            <i class="fas fa-building me-2" style="color: #2563eb;"></i>
            <strong>@Model.Organization?.Name</strong>
        </span>
        <span>
            <i class="fas fa-calendar me-2" style="color: #10b981;"></i>
            @Model.Date.ToString("dd/MM/yyyy HH:mm")
        </span>
        <span>
            <i class="fas fa-users me-2" style="color: #f59e0b;"></i>
            @Model.VolunteerOpportunities.Count voluntário(s) inscrito(s)
        </span>
    </div>
</div>

<div class="details-content">
    <!-- Conteúdo Principal -->
    <div>
        <!-- Informações da Oportunidade -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>Informações da Oportunidade
                </h5>
            </div>
            <div class="card-body">
                <h6 class="mb-3">Descrição</h6>
                <p class="text-muted">@Model.Description</p>
                
                <hr>
                
                <div class="row">
                    <div class="col-md-6">
                        <p class="mb-2">
                            <strong>Data:</strong><br>
                            <i class="fas fa-calendar me-2"></i>
                            @Model.Date.ToString("dd/MM/yyyy HH:mm")
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-2">
                            <strong>Organização:</strong><br>
                            <i class="fas fa-building me-2"></i>
                            @Model.Organization?.Name
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Voluntários Inscritos -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-users me-2"></i>Voluntários Inscritos (@Model.VolunteerOpportunities.Count)
                </h5>
            </div>
            <div class="card-body">
                @if (Model.VolunteerOpportunities.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        <i class="fas fa-user me-2"></i>Nome
                                    </th>
                                    <th>
                                        <i class="fas fa-envelope me-2"></i>Email
                                    </th>
                                    <th>
                                        <i class="fas fa-clock me-2"></i>Data de Inscrição
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var vo in Model.VolunteerOpportunities)
                                {
                                    <tr>
                                        <td>@vo.Volunteer?.FullName</td>
                                        <td>
                                            <a href="mailto:@vo.Volunteer?.Email">@vo.Volunteer?.Email</a>
                                        </td>
                                        <td>@vo.RegisteredAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="empty-state py-4">
                        <i class="fas fa-user-slash"></i>
                        <p class="mt-2">Nenhum voluntário inscrito ainda.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Sidebar - Inscrição -->
    <div>
        <div class="card sticky-top" style="top: 80px;">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-clipboard-list me-2"></i>Inscrever-se
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Register" method="post">
                    <input type="hidden" name="opportunityId" value="@Model.Id" />
                    
                    <div class="form-group">
                        <label for="fullName" class="form-label">
                            <i class="fas fa-user me-2"></i>Nome Completo
                        </label>
                        <input type="text" class="form-control" id="fullName" name="fullName" placeholder="Seu nome completo" required />
                    </div>
                    
                    <div class="form-group">
                        <label for="email" class="form-label">
                            <i class="fas fa-envelope me-2"></i>Email
                        </label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="seu@email.com" required />
                    </div>
                    
                    <button type="submit" class="btn btn-success w-100">
                        <i class="fas fa-check-circle me-2"></i>Inscrever-se
                    </button>
                </form>

                <hr>

                <p class="text-muted small">
                    <i class="fas fa-shield-alt me-2"></i>
                    Seus dados serão usados apenas para esta inscrição.
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Botão Voltar -->
<div class="details-actions mt-4">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Voltar para Oportunidades
    </a>
</div>
