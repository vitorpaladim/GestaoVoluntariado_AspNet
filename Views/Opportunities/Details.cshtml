@model Opportunity

@{
    ViewData["Title"] = "Detalhes da Oportunidade";
}

<h1>@Model.Title</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Informações da Oportunidade</h5>
                <p><strong>Organização:</strong> @Model.Organization?.Name</p>
                <p><strong>Data:</strong> @Model.Date.ToString("dd/MM/yyyy HH:mm")</p>
                <p><strong>Descrição:</strong></p>
                <p>@Model.Description</p>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Voluntários Inscritos (@Model.VolunteerOpportunities.Count)</h5>
                @if (Model.VolunteerOpportunities.Any())
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Email</th>
                                <th>Data de Inscrição</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var vo in Model.VolunteerOpportunities)
                            {
                                <tr>
                                    <td>@vo.Volunteer?.FullName</td>
                                    <td>@vo.Volunteer?.Email</td>
                                    <td>@vo.RegisteredAt.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>Nenhum voluntário inscrito ainda.</p>
                }
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Inscrever-se</h5>
                <form asp-action="Register" method="post">
                    <input type="hidden" name="opportunityId" value="@Model.Id" />
                    
                    <div class="mb-3">
                        <label for="fullName" class="form-label">Nome Completo</label>
                        <input type="text" class="form-control" id="fullName" name="fullName" required />
                    </div>
                    
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required />
                    </div>
                    
                    <button type="submit" class="btn btn-success">Inscrever-se</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
