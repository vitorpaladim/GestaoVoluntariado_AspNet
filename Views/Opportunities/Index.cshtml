@model IEnumerable<Opportunity>

@{
    ViewData["Title"] = "Oportunidades";
}

<!-- Action Bar -->
<div class="action-bar">
    <div>
        <h1 class="mb-0">
            <i class="fas fa-briefcase me-2" style="color: #2563eb;"></i>Oportunidades de Voluntariado
        </h1>
    </div>
    <div class="action-buttons">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Criar Nova Oportunidade
        </a>
    </div>
</div>

@if (Model.Any())
{
    <!-- Grid de Oportunidades -->
    <div class="card-grid">
        @foreach (var item in Model)
        {
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">@item.Title</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <i class="fas fa-building me-2" style="color: #2563eb;"></i>
                        <strong>Organização:</strong> @item.Organization?.Name
                    </p>
                    <p class="card-text">
                        <i class="fas fa-calendar me-2" style="color: #10b981;"></i>
                        <strong>Data:</strong> @item.Date.ToString("dd/MM/yyyy HH:mm")
                    </p>
                    <p class="card-text text-muted">
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            <span>@(item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)</span>
                        }
                        else
                        {
                            <span>Sem descrição disponível</span>
                        }
                    </p>
                </div>
                <div class="card-footer bg-light">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                        <i class="fas fa-eye me-2"></i>Ver Detalhes
                    </a>
                </div>
            </div>
        }
    </div>
}
else
{
    <!-- Empty State -->
    <div class="empty-state">
        <i class="fas fa-inbox"></i>
        <h4 class="mt-3">Nenhuma oportunidade encontrada</h4>
        <p class="text-muted mb-4">Comece criando uma nova oportunidade de voluntariado.</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Criar Primeira Oportunidade
        </a>
    </div>
}
