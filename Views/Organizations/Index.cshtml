@model IEnumerable<Organization>

@{
    ViewData["Title"] = "Organizações";
}

<!-- Action Bar -->
<div class="action-bar">
    <div>
        <h1 class="mb-0">
            <i class="fas fa-building me-2" style="color: #2563eb;"></i>Organizações
        </h1>
    </div>
    <div class="action-buttons">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Criar Nova Organização
        </a>
    </div>
</div>

@if (Model.Any())
{
    <!-- Tabela de Organizações -->
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>
                            <i class="fas fa-building me-2"></i>Nome
                        </th>
                        <th>
                            <i class="fas fa-align-left me-2"></i>Descrição
                        </th>
                        <th class="text-end">
                            <i class="fas fa-cog me-2"></i>Ações
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.Name</strong>
                            </td>
                            <td>
                                <span class="text-muted">
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        @(item.Description.Length > 60 ? item.Description.Substring(0, 60) + "..." : item.Description)
                                    }
                                    else
                                    {
                                        <span class="text-secondary">Sem descrição</span>
                                    }
                                </span>
                            </td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit me-1"></i>Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash me-1"></i>Deletar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <!-- Empty State -->
    <div class="empty-state">
        <i class="fas fa-inbox"></i>
        <h4 class="mt-3">Nenhuma organização encontrada</h4>
        <p class="text-muted mb-4">Comece criando uma nova organização.</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Criar Primeira Organização
        </a>
    </div>
}
