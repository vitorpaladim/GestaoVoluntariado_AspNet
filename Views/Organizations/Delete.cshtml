@model Organization

@{
    ViewData["Title"] = "Deletar Organização";
}

<div class="form-container">
    <div class="form-section">
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Atenção!</strong> Esta ação não pode ser desfeita.
        </div>

        <h1 class="mb-4">
            <i class="fas fa-trash me-2" style="color: #ef4444;"></i>Deletar Organização
        </h1>

        <p class="text-muted mb-4">Tem certeza que deseja deletar esta organização? Todos os dados associados serão perdidos.</p>

        <div class="card border-danger mb-4">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">
                    <i class="fas fa-building me-2"></i>@Model.Name
                </h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">
                        <i class="fas fa-heading me-2"></i>Nome
                    </dt>
                    <dd class="col-sm-9">
                        <strong>@Model.Name</strong>
                    </dd>

                    <dt class="col-sm-3">
                        <i class="fas fa-align-left me-2"></i>Descrição
                    </dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <span>@Model.Description</span>
                        }
                        else
                        {
                            <span class="text-muted">Sem descrição</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-actions">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i>Cancelar
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash me-2"></i>Confirmar Deleção
                </button>
            </div>
        </form>
    </div>
</div>
