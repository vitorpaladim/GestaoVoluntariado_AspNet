@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section with Carousel -->
<div id="carouselHero" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); height: 400px; display: flex; align-items: center; justify-content: center; color: white; text-align: center;">
            <div>
                <h1 class="display-4 fw-bold mb-3">Bem-vindo à Gestão de Voluntariado</h1>
                <p class="lead mb-4">Conectando voluntários apaixonados com oportunidades significativas</p>
                @if (!User.Identity?.IsAuthenticated == true)
                {
                    <a href="@Url.Action("RegisterVoluntario", "Account")" class="btn btn-light btn-lg me-2">
                        <i class="fas fa-user-plus me-2"></i>Registrar como Voluntário
                    </a>
                    <a href="@Url.Action("RegisterONG", "Account")" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-building me-2"></i>Registrar como ONG
                    </a>
                }
            </div>
        </div>
        <div class="carousel-item" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); height: 400px; display: flex; align-items: center; justify-content: center; color: white; text-align: center;">
            <div>
                <h2 class="display-5 fw-bold mb-3">Faça a Diferença</h2>
                <p class="lead mb-4">Voluntários dedicados transformam comunidades</p>
                <a href="@Url.Action("ListaProjetos", "Voluntario")" class="btn btn-light btn-lg">
                    <i class="fas fa-search me-2"></i>Explorar Projetos
                </a>
            </div>
        </div>
        <div class="carousel-item" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); height: 400px; display: flex; align-items: center; justify-content: center; color: white; text-align: center;">
            <div>
                <h2 class="display-5 fw-bold mb-3">Para Organizações</h2>
                <p class="lead mb-4">Encontre voluntários qualificados para seus projetos</p>
                <a href="@Url.Action("Dashboard", "ONG")" class="btn btn-light btn-lg">
                    Painel da ONG
                </a>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselHero" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselHero" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Próximo</span>
    </button>
</div>

<!-- Popular Causes Section -->
<section class="mb-5">
    <h2 class="mb-4">
        Causas Populares
    </h2>
    <div class="row g-3">
        @{
            var causas = ViewBag.Causas as List<string>;
            if (causas != null)
            {
                foreach (var causa in causas)
                {
                    <div class="col-md-4 col-lg-3">
                        <a href="@Url.Action("ListaProjetos", "Voluntario", new { causa = causa })" class="text-decoration-none">
                            <div class="card h-100 shadow-sm hover-shadow" style="transition: all 0.3s ease;">
                                <div class="card-body text-center">
                                    <div class="mb-3" style="font-size: 2.5rem;">
                                        @switch(causa)
                                        {
                                            case "Proteção Animal":
                                                <i class="fas fa-paw" style="color: #e74c3c;"></i>
                                                break;
                                            case "Meio Ambiente":
                                                <i class="fas fa-leaf" style="color: #27ae60;"></i>
                                                break;
                                            case "Equidade Racial":
                                                <i class="fas fa-handshake" style="color: #3498db;"></i>
                                                break;
                                            case "LGBTQIAPN+":
                                                <i class="fas fa-rainbow" style="color: #9b59b6;"></i>
                                                break;
                                            case "Mulheres":
                                                <i class="fas fa-venus" style="color: #e91e63;"></i>
                                                break;
                                            case "Família Voluntária":
                                                <i class="fas fa-home" style="color: #f39c12;"></i>
                                                break;
                                            case "Online":
                                                <i class="fas fa-laptop" style="color: #2980b9;"></i>
                                                break;
                                            case "Pontuais":
                                                <i class="fas fa-calendar" style="color: #16a085;"></i>
                                                break;
                                            case "RJ":
                                                <i class="fas fa-map-marker-alt" style="color: #c0392b;"></i>
                                                break;
                                        }
                                    </div>
                                    <h5 class="card-title">@causa</h5>
                                    <p class="card-text text-muted small">Clique para ver projetos</p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
        }
    </div>
</section>

<!-- Popular Vagas Section -->
@if (ViewBag.VagasPopulares != null && ((List<GestaoVoluntariado.Models.Projeto>)ViewBag.VagasPopulares).Count > 0)
{
    <section class="mb-5">
        <h2 class="mb-4">
            <i class="fas fa-star me-2" style="color: #f39c12;"></i>Vagas Populares
        </h2>
        <div class="row g-3">
            @foreach (var projeto in (List<GestaoVoluntariado.Models.Projeto>)ViewBag.VagasPopulares)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@projeto.Titulo</h5>
                            <p class="card-text text-muted small">@projeto.Descricao.Substring(0, Math.Min(100, projeto.Descricao.Length))...</p>
                            <div class="mb-3">
                                <span class="badge bg-primary">@projeto.Categoria</span>
                                <span class="badge bg-secondary">@projeto.Endereco</span>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted">
                                    <i class="fas fa-building me-1"></i>@projeto.ONG?.NomeONG
                                </small>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>@projeto.Data.ToString("dd/MM/yyyy")
                                </small>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted">
                                    <i class="fas fa-users me-1"></i>@projeto.TotalVagas vagas
                                </small>
                            </div>
                            @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Voluntario"))
                            {
                                <a href="@Url.Action("DetalhesProjeto", "Voluntario", new { id = projeto.Id })" class="btn btn-primary btn-sm w-100">
                                    <i class="fas fa-arrow-right me-1"></i>Ver Detalhes
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-sm w-100">
                                    <i class="fas fa-sign-in-alt me-1"></i>Fazer Login
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
}

<!-- Info Section -->
<section class="mt-5 pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3 class="mb-3">
                <i class="fas fa-star me-2" style="color: #2563eb;"></i>Por que usar nossa plataforma?
            </h3>
            <ul class="list-unstyled">
                <li class="mb-3">
                
                    <strong>Simples de usar:</strong> Interface intuitiva e fácil de navegar
                </li>
                <li class="mb-3">
                
                    <strong>Gerenciamento eficiente:</strong> Organize suas atividades de voluntariado
                </li>
                <li class="mb-3">
                
                    <strong>Conecte voluntários:</strong> Encontre e conecte com voluntários qualificados
                </li>
                <li class="mb-3">
                
                    <strong>Rastreie progresso:</strong> Monitore o progresso de suas atividades
                </li>
            </ul>
        </div>
        <div class="col-md-6">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="fas fa-rocket me-2" style="color: #2563eb;"></i>Comece agora
                    </h5>
                    <p class="card-text text-muted">
                        Explore nossa plataforma e descubra como podemos ajudar sua organização a gerenciar voluntários de forma mais eficiente.
                    </p>
                    <div class="mt-4">
                        @if (!User.Identity?.IsAuthenticated == true)
                        {
                            <a href="@Url.Action("RegisterVoluntario", "Account")" class="btn btn-primary me-2">
                                <i class="fas fa-user-plus me-2"></i>Registrar Voluntário
                            </a>
                            <a href="@Url.Action("RegisterONG", "Account")" class="btn btn-outline-primary">
                                <i class="fas fa-building me-2"></i>Registrar ONG
                            </a>
                        }
                        else if (User.IsInRole("Voluntario"))
                        {
                            <a href="@Url.Action("ListaProjetos", "Voluntario")" class="btn btn-primary me-2">
                                <i class="fas fa-search me-2"></i>Explorar Projetos
                            </a>
                            <a href="@Url.Action("Dashboard", "Voluntario")" class="btn btn-outline-primary">
                                Meu Dashboard
                            </a>
                        }
                        else if (User.IsInRole("ONG"))
                        {
                            <a href="@Url.Action("Dashboard", "ONG")" class="btn btn-primary me-2">
                                    Painel da ONG
                            </a>
                            <a href="@Url.Action("CriarProjeto", "ONG")" class="btn btn-outline-primary">
                                <i class="fas fa-plus me-2"></i>Criar Projeto
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .hover-shadow:hover {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1) !important;
        transform: translateY(-4px);
    }
</style>
