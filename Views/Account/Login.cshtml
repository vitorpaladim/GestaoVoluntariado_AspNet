@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body p-5">
                <h2 class="card-title mb-4 text-center">
                    Login
                </h2>

                <form method="post" asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="seu@email.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Senha" class="form-label">Senha</label>
                        <input asp-for="Senha" class="form-control" type="password" placeholder="Sua senha" />
                        <span asp-validation-for="Senha" class="text-danger small"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="LembrarMe" class="form-check-input" type="checkbox" />
                        <label asp-for="LembrarMe" class="form-check-label">Lembrar-me</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-3">
                        Entrar
                    </button>
                </form>

                <hr />

                <p class="text-center mb-0">
                    Não tem conta? 
                    <a href="@Url.Action("RegisterVoluntario", "Account")" class="text-decoration-none">Registre-se como Voluntário</a>
                    ou 
                    <a href="@Url.Action("RegisterONG", "Account")" class="text-decoration-none">como ONG</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
