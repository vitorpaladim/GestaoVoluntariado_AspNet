@model Volunteer

@{
    ViewData["Title"] = "Detalhes do Voluntário";
}

<!-- Header -->
<div class="details-header">
    <div class="d-flex align-items-center mb-3">
        <div class="avatar-circle bg-primary text-white me-3" style="width: 80px; height: 80px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold; font-size: 2rem;">
            @Model.FullName.Substring(0, 1).ToUpper()
        </div>
        <div>
            <h1 class="mb-0">@Model.FullName</h1>
            <p class="text-muted mb-0">
                <i class="fas fa-envelope me-2"></i>@Model.Email
            </p>
        </div>
    </div>
</div>

<div class="details-content">
    <!-- Informações Principais -->
    <div>
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>Informações do Voluntário
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p class="mb-3">
                            <strong>Nome Completo:</strong><br>
                            <i class="fas fa-user me-2"></i>
                            @Model.FullName
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-3">
                            <strong>Email:</strong><br>
                            <i class="fas fa-envelope me-2"></i>
                            <a href="mailto:@Model.Email">@Model.Email</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Oportunidades Inscritas -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-briefcase me-2"></i>Oportunidades Inscritas (@Model.VolunteerOpportunities.Count)
                </h5>
            </div>
            <div class="card-body">
                @if (Model.VolunteerOpportunities.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        <i class="fas fa-briefcase me-2"></i>Oportunidade
                                    </th>
                                    <th>
                                        <i class="fas fa-building me-2"></i>Organização
                                    </th>
                                    <th>
                                        <i class="fas fa-calendar me-2"></i>Data
                                    </th>
                                    <th>
                                        <i class="fas fa-clock me-2"></i>Inscrição
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var vo in Model.VolunteerOpportunities)
                                {
                                    <tr>
                                        <td>
                                            <strong>@vo.Opportunity?.Title</strong>
                                        </td>
                                        <td>
                                            @vo.Opportunity?.Organization?.Name
                                        </td>
                                        <td>
                                            @vo.Opportunity?.Date.ToString("dd/MM/yyyy HH:mm")
                                        </td>
                                        <td>
                                            @vo.RegisteredAt.ToString("dd/MM/yyyy HH:mm")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="empty-state py-4">
                        <i class="fas fa-inbox"></i>
                        <p class="mt-2">Este voluntário ainda não se inscreveu em nenhuma oportunidade.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Sidebar - Ações -->
    <div>
        <div class="card sticky-top" style="top: 80px;">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-cog me-2"></i>Ações
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="mailto:@Model.Email" class="btn btn-primary">
                        <i class="fas fa-envelope me-2"></i>Enviar Email
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Deletar Voluntário
                    </a>
                </div>

                <hr>

                <div class="stat-box text-center">
                    <h3 class="text-primary mb-2">@Model.VolunteerOpportunities.Count</h3>
                    <p class="text-muted small mb-0">Oportunidades</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Botão Voltar -->
<div class="details-actions mt-4">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Voltar para Voluntários
    </a>
</div>
