@model IEnumerable<Volunteer>

    @{
    ViewData["Title"] = "Voluntários";
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold">
                <i class="bi bi-people-fill text-primary"></i> Voluntários
            </h1>
            <p class="text-muted">Gerencie todos os voluntários cadastrados</p>
        </div>
    </div>

    <!-- Filtro de Busca -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text bg-light">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text"
                               class="form-control"
                               name="searchString"
                               value="@ViewData["CurrentFilter"]"
                               placeholder="Buscar por nome ou email...">
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-filter"></i> Filtrar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Lista de Voluntários -->
    @if (Model.Any())
{
    <div class="row">
        @foreach (var volunteer in Model)
        {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm hover-card">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="avatar-circle bg-primary text-white me-3">
                            @volunteer.FullName.Substring(0, 1).ToUpper()
                        </div>
                        <div>
                            <h5 class="card-title mb-0">@volunteer.FullName</h5>
                            <small class="text-muted">
                                <i class="bi bi-envelope"></i> @volunteer.Email
                            </small>
                        </div>
                    </div>

                    <hr>

                    <div class="mb-3">
                        <h6 class="fw-bold text-muted small">Inscrições:</h6>
                        <span class="badge bg-success">
                            <i class="bi bi-calendar-check"></i>
                            @volunteer.VolunteerOpportunities.Count oportunidade(s)
                        </span>
                    </div>

                    @if (volunteer.VolunteerOpportunities.Any())
                        {
                    <div class="small text-muted">
                        <strong>Últimas oportunidades:</strong>
                        <ul class="list-unstyled mt-2">
                            @foreach (var vo in volunteer.VolunteerOpportunities.Take(2))
                                    {
                            <li>
                                <i class="bi bi-check-circle text-success"></i>
                                @vo.Opportunity?.Title
                            </li>
                                    }
                            @if (volunteer.VolunteerOpportunities.Count > 2)
                                    {
                            <li class="text-muted">
                                <i>+ @(volunteer.VolunteerOpportunities.Count - 2) mais...</i>
                            </li>
                                    }
                        </ul>
                    </div>
                        }
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex gap-2">
                        <a asp-action="Details"
                           asp-route-id="@volunteer.Id"
                           class="btn btn-sm btn-outline-primary flex-fill">
                            <i class="bi bi-eye"></i> Detalhes
                        </a>
                        <a asp-action="Delete"
                           asp-route-id="@volunteer.Id"
                           class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
}
else
{
    <div class="alert alert-info shadow-sm">
        <h4 class="alert-heading">
            <i class="bi bi-info-circle"></i> Nenhum voluntário encontrado
        </h4>
        <p class="mb-0">
            @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
            {
            <text>Nenhum voluntário corresponde ao filtro aplicado.</text>
            <br />
            <a asp-action="Index" class="btn btn-sm btn-primary mt-2">
                <i class="bi bi-arrow-counterclockwise"></i> Limpar Filtro
            </a>
            }
            else
            {
            <text>Ainda não há voluntários cadastrados. Eles serão criados automaticamente ao se inscreverem em oportunidades.</text>
            }
        </p>
    </div>
}

    <!-- Estatísticas -->
    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h5 class="card-title">
                <i class="bi bi-bar-chart-fill text-info"></i> Estatísticas
            </h5>
            <div class="row text-center">
                <div class="col-md-4">
                    <div class="stat-box">
                        <h2 class="text-primary">@Model.Count()</h2>
                        <p class="text-muted mb-0">Total de Voluntários</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-box">
                        <h2 class="text-success">@Model.Where(v => v.VolunteerOpportunities.Any()).Count()</h2>
                        <p class="text-muted mb-0">Com Inscrições Ativas</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-box">
                        <h2 class="text-info">@Model.Sum(v => v.VolunteerOpportunities.Count)</h2>
                        <p class="text-muted mb-0">Total de Inscrições</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
