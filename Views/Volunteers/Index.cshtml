@model IEnumerable<Volunteer>

@{
    ViewData["Title"] = "Voluntários";
}

<!-- Header -->
<div class="action-bar">
    <div>
        <h1 class="mb-0">
            Voluntários
        </h1>
    </div>
</div>

@if (Model.Any())
{
    <!-- Grid de Voluntários -->
    <div class="card-grid">
        @foreach (var volunteer in Model)
        {
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="avatar-circle bg-primary text-white me-3" style="width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold; font-size: 1.25rem;">
                            @volunteer.FullName.Substring(0, 1).ToUpper()
                        </div>
                        <div>
                            <h5 class="card-title mb-0">@volunteer.FullName</h5>
                            <small class="text-muted">
                                @volunteer.Email
                            </small>
                        </div>
                    </div>

                    <hr>

                    <div class="mb-3">
                        <h6 class="fw-bold text-muted small mb-2">Inscrições:</h6>
                        <span class="badge bg-success">
                            
                            @volunteer.VolunteerOpportunities.Count oportunidade(s)
                        </span>
                    </div>

                    @if (volunteer.VolunteerOpportunities.Any())
                    {
                        <div class="small text-muted">
                            <strong>Últimas oportunidades:</strong>
                            <ul class="list-unstyled mt-2">
                                @foreach (var vo in volunteer.VolunteerOpportunities.Take(2))
                                {
                                    <li>
                                        
                                        @vo.Opportunity?.Title
                                    </li>
                                }
                                @if (volunteer.VolunteerOpportunities.Count > 2)
                                {
                                    <li class="text-muted">
                                        <i>+ @(volunteer.VolunteerOpportunities.Count - 2) mais...
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                </div>

                <div class="card-footer bg-light">
                    <div class="d-flex gap-2">
                        <a asp-action="Details" asp-route-id="@volunteer.Id" class="btn btn-sm btn-primary flex-fill">
                            Detalhes
                        </a>
                        <a asp-action="Delete" asp-route-id="@volunteer.Id" class="btn btn-sm btn-danger">
                            
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Estatísticas -->
    <div class="card shadow-sm mt-5">
        <div class="card-header">
            <h5 class="card-title mb-0">
                Estatísticas
            </h5>
        </div>
        <div class="card-body">
            <div class="row text-center">
                <div class="col-md-4">
                    <div class="stat-box">
                        <h2 class="text-primary mb-2">@Model.Count()</h2>
                        <p class="text-muted mb-0">Total de Voluntários</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-box">
                        <h2 class="text-success mb-2">@Model.Where(v => v.VolunteerOpportunities.Any()).Count()</h2>
                        <p class="text-muted mb-0">Com Inscrições Ativas</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-box">
                        <h2 class="text-info mb-2">@Model.Sum(v => v.VolunteerOpportunities.Count)</h2>
                        <p class="text-muted mb-0">Total de Inscrições</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Empty State -->
    <div class="alert alert-info shadow-sm">
        <h4 class="alert-heading">
            Nenhum voluntário encontrado
        </h4>
        <p class="mb-0">
            @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
            {
                <text>Nenhum voluntário corresponde ao filtro aplicado.</text>
                <br />
                <a asp-action="Index" class="btn btn-sm btn-primary mt-2">
                    Limpar Filtro
                </a>
            }
            else
            {
                <text>Ainda não há voluntários cadastrados. Eles serão criados automaticamente ao se inscreverem em oportunidades.</text>
            }
        </p>
    </div>
}
